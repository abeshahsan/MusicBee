<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane maxHeight="710.0" maxWidth="936.0" minHeight="710.0" minWidth="936.0" prefHeight="710.0" prefWidth="936.0"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.musicbee.controllers.SignInController">
    <right>
        <VBox prefHeight="500.0" prefWidth="308.0" stylesheets="@Stylesheet.css"
              BorderPane.alignment="CENTER">
            <AnchorPane id="welcome" prefHeight="248.0" prefWidth="190.0" stylesheets="@Stylesheet.css">
                <Label layoutX="24.0" layoutY="50.0" prefHeight="82.0" prefWidth="260.0" stylesheets="@Stylesheet.css"
                       text="Welcome to Music Bee" textFill="#2c2828">
                    <font>
                        <Font name="System Bold Italic" size="24.0"/>
                    </font>
                </Label>
            </AnchorPane>
            <AnchorPane id="namePass" prefHeight="359.0" prefWidth="310.0" stylesheets="@Stylesheet.css">
                <TextField fx:id="usernameField" layoutX="51.0" layoutY="48.0" onAction="#onClickSubmit"
                           prefHeight="18.0" prefWidth="206.0" AnchorPane.leftAnchor="51.0"
                           AnchorPane.rightAnchor="51.0">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <PasswordField fx:id="passwordField" layoutX="52.0" layoutY="116.0" onAction="#onClickSubmit"
                               AnchorPane.leftAnchor="51.0" AnchorPane.rightAnchor="51.0">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </PasswordField>
                <TextField fx:id="shownPasswordField" layoutX="69.0" layoutY="116.0" onAction="#onClickSubmit"
                           visible="false" AnchorPane.leftAnchor="51.0" AnchorPane.rightAnchor="51.0">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <Label layoutX="76.0" layoutY="86.0" text="Password:"
                       AnchorPane.leftAnchor="60.0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <Button id="forgetPass" focusTraversable="false" layoutX="143.0" layoutY="145.0" mnemonicParsing="false"
                        onAction="#onForgotPass" stylesheets="@Stylesheet.css" text="Forgot Password?" underline="true"
                        AnchorPane.rightAnchor="44.0"/>
                <Label fx:id="wrong" layoutX="90.0" layoutY="170.0">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Label>
                <Label layoutX="76.0" layoutY="14.0" text="Username:"
                       AnchorPane.leftAnchor="60.0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <Button layoutX="102.0" layoutY="200.0" mnemonicParsing="false" onAction="#onClickSubmit"
                        prefHeight="31.0" prefWidth="118.0" text="Login" AnchorPane.rightAnchor="88.0">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
                <ToggleButton focusTraversable="false" layoutX="200.0" layoutY="116.0" mnemonicParsing="false"
                              onAction="#togglePasswordChars" prefHeight="30.0" prefWidth="57.0" text="Show"
                              AnchorPane.rightAnchor="51.0"/>
            </AnchorPane>
            <AnchorPane id="notMember" prefHeight="200.0" prefWidth="200.0" stylesheets="@Stylesheet.css">
                <Label layoutX="59.0" layoutY="15.0" stylesheets="@Stylesheet.css" text="Not a member?"
                       AnchorPane.leftAnchor="60.0">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Label>
                <Button id="signUp" focusTraversable="false" layoutX="163.0" layoutY="10.0" mnemonicParsing="false"
                        onAction="#onSignUpFromLogin" stylesheets="@Stylesheet.css" text="Sign Up" underline="true"
                        AnchorPane.rightAnchor="72.66666666666669">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
            </AnchorPane>
        </VBox>
    </right>
    <center>
        <Pane id="what" prefHeight="400.0" prefWidth="393.0" stylesheets="@Stylesheet.css"
              BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
